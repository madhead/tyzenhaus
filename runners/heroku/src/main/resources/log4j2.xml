<Configuration status="WARN" shutdownHook="disable">
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout>
				<Pattern>
					%d{ISO8601}{UTC} [%-5p] [%t] [%c{1.}]: %m%n
				</Pattern>>
			</PatternLayout>
		</Console>
	</Appenders>

	<Loggers>
		<Logger name="by.dev.madhead.tyzenhaus" level="${env:TYZENHAUS_LOG_THRESHOLD:-INFO}" additivity="false">
			<AppenderRef ref="STDOUT"/>
		</Logger>
		<Root level="${env:TYZENHAUS_LOG_ROOT_THRESHOLD:-WARN}">
			<AppenderRef ref="STDOUT"/>
		</Root>
	</Loggers>
</Configuration>
